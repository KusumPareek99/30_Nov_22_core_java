public static int getLargest(int[] getMaxNum){  
		int temp;  
		for (int i = 0; i < n; i++)   
		        {  
		            for (int j = i + 1; j < n; j++)   
		            {  
		                if (getMaxNum[i] > getMaxNum[j])   
		                {  
		                    temp = getMaxNum[i];  
		                    getMaxNum[i] = getMaxNum[j];  
		                    getMaxNum[j] = temp;  
		                }  
		            }  
		        }  
		       return getMaxNum[n-1];  
}



